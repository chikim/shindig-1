interface PaymentService {

  /**
   * Returns a Coin object for person with $id or false on not found
   */
  function getCoin($userId, $groupId, $appId, $options, SecurityToken $token);

  /**
   * Update Coin object coins for person
   */
  function updateCoin($userId, $groupId, $appId, $coin, SecurityToken $token);

  /**
   * Insert Payment object coins for person
   */
  function insertPayment($user_id, $appId, $callbackUrl, $finishPageUrl, $message, $paymentItems);

  /**
   * Insert Payment Person object coins for person
   */
  function insertPersonPayment($payment_id, $app_id, $platform_user_id, $coin);
  
  /**
   * Returns a Coin object for person with $id or false on not found
   */
  function getPayment($userId, $groupId, $appId, $paymentId, SecurityToken $token);
}


